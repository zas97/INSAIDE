<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".consultationTutoratInscrit">

    <TextView
        android:id="@+id/monCompteText2"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="64dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:text="Evaluation du tutorat"
        android:textColor="@color/GrisFonceINSAIDE"
        android:textSize="24sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="127dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="87dp"
        android:background="@color/RED_INSAIDE"
        android:text="Valider"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/logoImage3"
        android:layout_width="165dp"
        android:layout_height="43dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@+id/monCompteText"
        app:srcCompat="@drawable/logoinsaide" />

    <TextView
        android:id="@+id/matiereTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="169dp"
        android:text="Note :"
        android:textColor="@color/GrisFonceINSAIDE"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matiereTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="12dp"
        android:text="Commentaire :"
        android:textColor="@color/GrisFonceINSAIDE"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="125dp" />

    <fragment
        android:id="@+id/menu_fragment"
        android:name="com.example.joanc.insaide.Fragment_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        tools:layout="@layout/fragment_menu_bar"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:hint="Entrez votre commentaire"
        android:layout_alignLeft="@+id/textView2">

        <android.support.design.widget.TextInputEditText
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:hint="Entrez votre commentaire" />
    </android.support.design.widget.TextInputLayout>

    <RatingBar
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginBottom="354dp"
        android:progressTint="@color/RED_INSAIDE"
        app:srcCompat="@android:drawable/btn_star" />

</RelativeLayout>